{
  "name": "@nikku/merge-me",
  "version": "0.10.0",
  "description": "Automatically merges your GitHub pull requests once all checks pass",
  "author": "Nico Rehwaldt <git_nikku@nixis.de>",
  "license": "MIT",
  "repository": "https://github.com/nikku/merge-me.git",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "all": "run-s lint lint:types test-coverage",
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "eslint .",
    "lint:types": "tsc --pretty",
    "test": "LOG_LEVEL=debug mocha test/*",
    "test-coverage": "nyc -x=lib/recorder.js -x=test/recording.js --reporter=lcov --reporter=html --reporter=text mocha test/*",
    "auto-test": "nodemon --exec npm test"
  },
  "dependencies": {
    "probot": "^10.17.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^7.12.0",
    "eslint-plugin-bpmn-io": "^0.11.0",
    "mocha": "^8.2.0",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.3",
    "nyc": "^15.1.0",
    "smee-client": "^1.2.2",
    "typescript": "^4.0.3"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "**/*.js"
    ]
  }
}
