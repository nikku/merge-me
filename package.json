{
  "name": "@nikku/merge-me",
  "version": "0.5.0",
  "description": "Automatically merges your GitHub pull requests once all checks pass",
  "author": "Nico Rehwaldt <git_nikku@nixis.de>",
  "license": "MIT",
  "repository": "https://github.com/nikku/merge-me.git",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "all": "run-s lint test",
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "eslint .",
    "test": "nyc -x=lib/recorder.js -x=test/recording.js --reporter=lcov --reporter=html --reporter=text mocha test/*",
    "auto-test": "nodemon --exec npm test"
  },
  "dependencies": {
    "probot": "^7.5.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.6.1",
    "eslint-plugin-bpmn-io": "^0.6.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.2",
    "npm-run-all": "^4.1.3",
    "nyc": "^13.3.0",
    "smee-client": "^1.0.2"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  }
}
